{
    "presets": [
        [
            "env",
            {
                "targets": {
                    "node": "8.9.4",
                    "browsers": [
                        "Chrome >= 65"
                    ]
                },
                "include": [
                    "babel-plugin-transform-es2015-classes"
                ]
            }
        ],
        "react"
    ],
    "env": {
        "development": {
            "presets": [
                "react-hmre" // disabled when build react app for production
            ],
            "plugins": [
                "transform-class-properties"
            ]
        }
    }
}